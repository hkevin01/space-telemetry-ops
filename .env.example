# Space Telemetry Operations - Environment Configuration

# Application Environment
NODE_ENV=production
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://telemetry_user:telemetry_pass123@postgres:5432/telemetry
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=telemetry
POSTGRES_USER=telemetry_user
POSTGRES_PASSWORD=telemetry_pass123

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MinIO Object Storage
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=minio123456
MINIO_BUCKET_TELEMETRY=telemetry-archive
MINIO_BUCKET_LOGS=system-logs
MINIO_SECURE=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8083
API_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
API_RATE_LIMIT_PER_MINUTE=1000

# Ingestion Service
INGESTION_HOST=0.0.0.0
INGESTION_PORT=8080
INGESTION_WS_PORT=8081
INGESTION_RATE_LIMIT_MAX=50000
INGESTION_BATCH_SIZE=1000
INGESTION_BATCH_TIMEOUT_MS=1000

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8083
REACT_APP_WS_URL=ws://localhost:8081
REACT_APP_ENVIRONMENT=production

# Airflow Configuration
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow_user:airflow_pass123@postgres:5432/airflow
AIRFLOW__CELERY__RESULT_BACKEND=redis://redis:6379/1
AIRFLOW__CELERY__BROKER_URL=redis://redis:6379/1
AIRFLOW__CORE__FERNET_KEY=your-fernet-key-here
AIRFLOW__WEBSERVER__SECRET_KEY=your-webserver-secret-here
AIRFLOW__CORE__LOAD_EXAMPLES=false
AIRFLOW__API__AUTH_BACKENDS=airflow.api.auth.backend.basic_auth
_AIRFLOW_WWW_USER_USERNAME=admin
_AIRFLOW_WWW_USER_PASSWORD=admin123

# Monitoring and Logging
LOG_LEVEL=info
LOG_FILE=logs/application.log
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Security Configuration
CORS_ORIGINS=http://localhost:3000,https://your-domain.com
SECURITY_HEADERS_ENABLED=true
RATE_LIMITING_ENABLED=true
AUDIT_LOGGING_ENABLED=true

# Email Configuration (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@space-telemetry.com

# Alert Configuration
ALERT_EMAIL_ENABLED=true
ALERT_WEBHOOK_ENABLED=false
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
ALERT_THRESHOLD_CPU=80
ALERT_THRESHOLD_MEMORY=85
ALERT_THRESHOLD_DISK=90

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=telemetry-backups
BACKUP_S3_REGION=us-east-1

# Performance Tuning
MAX_CONNECTIONS_PG=100
MAX_CONNECTIONS_REDIS=50
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
KEEP_ALIVE_TIMEOUT=75

# Development Overrides (uncomment for development)
# NODE_ENV=development
# DEBUG=true
# LOG_LEVEL=debug
# REACT_APP_API_URL=http://localhost:8083
# API_CORS_ALLOW_ALL=true
